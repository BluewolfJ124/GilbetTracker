<Page x:Class="Assist.MVVM.View.Settings.SettingPages.Settings_General"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assist.MVVM.View.Settings.SettingPages"
      xmlns:lang="clr-namespace:Assist.Properties.Languages"
      mc:Ignorable="d" 
      Style="{StaticResource PageFadeIn}"
      MinWidth="400"
      MinHeight="470"
      Width="400"
      Height="470"
      d:DesignWidth="400"
      d:DesignHeight="470" 
      Title="Settings_General">

    <Grid>
        <DockPanel>
            <Grid x:Name="LanguageSetting" DockPanel.Dock="Top" VerticalAlignment="Top" Margin="10">
                <Label Content="{x:Static lang:Lang.SettingsGeneral_SelLang}" Foreground="White" HorizontalAlignment="Left"></Label>
                <ComboBox HorizontalAlignment="Right" Height="30" Width="130"/>
            </Grid>

        </DockPanel>
    </Grid>
</Page>
