<UserControl x:Class="Assist.Controls.Startup.ProfileCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Assist.Controls.Startup"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border Background="{DynamicResource AssistNavigationBar}"
                                BorderBrush="{DynamicResource ShopBorderColorHover}"
                                BorderThickness="1"
                                >
                            <Grid>

                                <Grid Name="ImageContainer" HorizontalAlignment="Left" Margin="10,5">
                                    <Image
                                        Name="ProfileImage"
                                        Height="60"
                                        Width="60"/>
                                    <Image
                                        Name="RankImage"
                                        Height="20"
                                        Width="20" Margin="15,-1,15,59"
                                        Source="../../Resources/RankLogos/TX_CompetitiveTier_Large_10.png"/>
                                </Grid>
                                <Grid Name="InfoContainer" 
                                      HorizontalAlignment="Left" 
                                      Margin="70,0">
                                    <StackPanel VerticalAlignment="Center" Margin="10,0">
                                        <Label Padding="2" Content="ValorantUser#00000" HorizontalAlignment="Left" FontFamily="{StaticResource WorkSans}" FontWeight="SemiBold" FontSize="18" Foreground="White" Opacity=".9" Width="auto">
                                            <Label.Effect>
                                                <DropShadowEffect BlurRadius="1" ShadowDepth="1"/>
                                            </Label.Effect>
                                        </Label>
                                        <Label Padding="2" Content="UNKNOWN" HorizontalAlignment="Left" FontFamily="{StaticResource WorkSans}" FontWeight="Normal" FontSize="18" Foreground="White" Opacity=".9" Width="auto">
                                            <Label.Effect>
                                                <DropShadowEffect BlurRadius="1" ShadowDepth="1"/>
                                            </Label.Effect>
                                        </Label>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>
    <Button></Button>
</UserControl>
