<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lang="clr-namespace:Assist.Properties"
             xmlns:progression="clr-namespace:Assist.Controls.Progression"
             xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Assist.Controls.Dashboard.ProgressionPreviewControl">
    <Border Background="{DynamicResource AssistControlBackground}"
            BorderBrush="{DynamicResource AssistControlOutline}"
            BorderThickness="1"
            CornerRadius="10"
            Padding="5">
        <Grid>
            <StackPanel VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Orientation="Vertical"
                        Spacing="8">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Progression"
                               FontWeight="SemiBold"
                               FontSize="18"
                               Opacity="1"
                               HorizontalAlignment="Left"
                               TextAlignment="Center"/>
                </StackPanel>
            
                <Rectangle Height="1"
                           HorizontalAlignment="Stretch"
                           Fill="{DynamicResource AssistControlOutline}"
                           IsVisible="True"/>
                
                <Panel Margin="0,10">
                    <StackPanel Orientation="Horizontal"
                                Spacing="10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <progression:DailyTicketDiamond Height="90"
                                                        Name="DiamondControl1"
                                                        DiamondNumber="1"/>
                        <progression:DailyTicketDiamond Height="90"
                                                        Name="DiamondControl2"
                                                        DiamondNumber="2"/>
                        <progression:DailyTicketDiamond Height="90"
                                                        Name="DiamondControl3"
                                                        DiamondNumber="3"/>
                        <progression:DailyTicketDiamond Height="90"
                                                        Name="DiamondControl4"
                                                        DiamondNumber="4"/>
                    </StackPanel>
                </Panel>
                <Rectangle Height="1"
                           HorizontalAlignment="Stretch"
                           Fill="{DynamicResource AssistControlOutline}"
                           IsVisible="True"/>
                <StackPanel>
                    <TextBlock Text="Current Rank"
                               
                               Foreground="{DynamicResource AssistForeground}"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Padding="0,0,0,3"></TextBlock>
                    <Rectangle Fill="{DynamicResource AssistPrimaryColor}"
                               Height="1"
                    />
                        
                        
                      <StackPanel Orientation="Horizontal"
                                            Spacing="10"
                                            Margin="0,8"
                                            HorizontalAlignment="Center">
                                    <Border 
                                            Width="90"
                                            Height="90"
                                            CornerRadius="5">
                                        <asyncImageLoader:AdvancedImage Margin="5"
                                                                        Source="{Binding PlayerRankIcon}"/>
                                    </Border>
                                    
                                    <Border Height="90"
                                            CornerRadius="5">
                                        <StackPanel VerticalAlignment="Center"
                                                    HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding RankName}"
                                                       FontFamily="{StaticResource Inter}"
                                                       FontSize="22"
                                                       FontWeight="Bold"
                                                       TextAlignment="Center"
                                                       DockPanel.Dock="Top"
                                                       ></TextBlock>
                                            <TextBlock Text="{Binding PlayerRR}"
                                                       FontFamily="{StaticResource Inter}"
                                                       FontSize="18"
                                                       Foreground="#50FFFFFF"
                                                       FontWeight="Medium"
                                                       TextAlignment="Center"
                                                       DockPanel.Dock="Top"
                                            ></TextBlock>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                        
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
