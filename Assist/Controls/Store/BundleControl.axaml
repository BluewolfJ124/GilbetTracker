<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:store="clr-namespace:Assist.Controls.Store"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Assist.Controls.Store.BundleControl"
             Initialized="BundleControl_Initialized">
	<Grid>
        <Border Background="Black" Opacity=".5"></Border>
        <Carousel x:Name="BundleCarousel" 
                  Margin="0"
                  Items="{Binding Bundles}">
            <Carousel.PageTransition>
                <CrossFade Duration="0.15" />
            </Carousel.PageTransition>

        </Carousel>
    </Grid>
</UserControl>
