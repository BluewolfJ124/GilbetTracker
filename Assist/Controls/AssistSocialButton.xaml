<UserControl x:Class="Assist.Controls.AssistSocialButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Assist.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="24" x:Name="_this">

    <UserControl.Resources>
    <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FF1F1F1F"/>
            <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="50">
                            <Path Name="ButtonIcon"
                                      Fill="White"
                                      Data="{StaticResource twitterLogo}"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Width="12" Height="10" Stretch="UniformToFill"/>
                        </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    </UserControl.Resources>


    <Grid Background="Transparent">
        <Button/>
    </Grid>
</UserControl>
