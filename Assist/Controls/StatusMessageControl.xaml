<UserControl x:Class="Assist.Controls.StatusMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Assist.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" Width="350" Background="Transparent" Name="_this"> 
    <Border Background="{StaticResource BackingBlack12}" CornerRadius="10">
        <Grid>
            <StackPanel>
                <Label Content="// Status Message" FontFamily="Bahnschrift" Foreground="White" FontSize="18" />
                <TextBlock Margin="2,0,2,12" Background="{StaticResource BackingBlack15}" Text="{Binding MessageText, Mode=TwoWay, ElementName=_this}" Foreground="White" FontFamily="Bahnschrift Light" FontSize="14" TextWrapping="WrapWithOverflow"></TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
