<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lobbies="clr-namespace:Assist.Game.Controls.Lobbies"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="40"
             x:Class="Assist.Game.Controls.Lobbies.LobbyJoinButton">
    <UserControl.Styles>
        
        <Style Selector="Border">
            <Setter Property="BorderBrush" Value="{DynamicResource AssistGray}"></Setter>
        </Style>
        <Style Selector="Border:pointerover">
            <Setter Property="BorderBrush" Value="{DynamicResource AssistRed}"></Setter>
            <Setter Property="Cursor" Value="Hand"></Setter>
        </Style>
    </UserControl.Styles>
    
    
    <Border
            x:Name="PART_Border"
            Background="#191919"
            CornerRadius="5"
            BorderThickness="1">
        <TextBlock Text="JOIN"
                   FontFamily="{StaticResource WorkSans}"
                   FontSize="12"
                   FontWeight="SemiBold"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
    </Border>
</UserControl>

