<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:settings="clr-namespace:Assist.Controls.Settings"
             mc:Ignorable="d"
             d:DesignWidth="745" 
             d:DesignHeight="500"
             x:Class="Assist.Views.Settings.Pages.AccountsSettingsPage">
	<Grid>
		<ScrollViewer>
			<UniformGrid
                Columns="3"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Initialized="UniformGrid_Init">
                <UniformGrid.Styles>
                    <Style Selector="settings|ProfileControl">
                        <Setter Property="Width" Value="220"/>
                        <Setter Property="Height" Value="150"/>
                        <Setter Property="Margin" Value="12,11"/>
                    </Style>
                </UniformGrid.Styles>

            </UniformGrid>
		</ScrollViewer>
    </Grid>
</UserControl>
