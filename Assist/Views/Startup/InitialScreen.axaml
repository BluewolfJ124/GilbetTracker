<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Assist.Views.Startup.InitialScreen"
             Background="{StaticResource AssistGray}"
             Initialized="StyledElement_OnInitialized">
	<Grid>
		<StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
			<Image Source="../../Resources/Icons/AssistText_Temp.png"
			       RenderOptions.BitmapInterpolationMode="MediumQuality"
			       Height="40"/>
			<Label FontFamily="{StaticResource WorkSans}"
			       FontWeight="Medium"
			       FontSize="12"
			       Foreground="White"
			       HorizontalAlignment="Center"
			       Content="{Binding Message}"/>
		</StackPanel>
    </Grid>
</UserControl>
