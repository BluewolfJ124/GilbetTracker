<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:store="clr-namespace:Assist.Controls.Store"
             xmlns:avaloniaProgressRing="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing"
             mc:Ignorable="d" d:DesignWidth="1190" d:DesignHeight="652"
             x:Class="Assist.Views.Store.StoreView"
             Loaded="Store_OnLoaded">
    <Grid RowDefinitions="*,35">
        <Grid  ColumnDefinitions="780,*">
            
            <ItemsControl Grid.Column="0"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          ItemsSource="{Binding BundleControls}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            
            <ItemsControl Grid.Column="1" VerticalAlignment="Center"
                          HorizontalAlignment="Right"
                          ItemsSource="{Binding OfferControls}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Spacing="8"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.Styles>
                    <Style Selector="store|SkinOfferControl">
                        <Setter Property="Width"
                                Value="365"
                                />
                        <Setter Property="Height"
                                Value="144"
                        />
                    </Style>
                </ItemsControl.Styles>
            </ItemsControl>
            
        </Grid>
        
        <Panel Grid.RowSpan="2"
               Grid.Row="0"
               VerticalAlignment="Stretch"
               HorizontalAlignment="Stretch"
               Background="#50000000"
               Margin="-10"
               IsVisible="{Binding LoadingStore}">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom" Spacing="20">
                <Image Source="/Assets/Default/Assist_Logo_SweetRed.png"
                       Height="100"
                       Width="100"
                       RenderOptions.BitmapInterpolationMode="HighQuality"
                       ></Image>
                <avaloniaProgressRing:ProgressRing Width="32" 
                                                   Height="32"
                                                   IsActive="True"
                                                   Foreground="WhiteSmoke"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Bottom"
                                                   Margin="0,10"
                />
            </StackPanel>
        </Panel>
    </Grid>
</UserControl>
